<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, 'Título' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, 'Contenido' %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.check_box :pinned %>
    <%= f.label :pinned, '¿Destacada?' %>
  <div class="actions">
    <% if params[:action] == 'new' %>
      <%= f.submit 'Crear Noticia' %>
    <% else %>
      <%= f.submit 'Editar Noticia' %>
    <% end %>
  </div>
<% end %>
